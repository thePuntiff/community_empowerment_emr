<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All credentials
    </h1>

    <a href="/credentials/new" class="btn btn-block btn-outline-secondary">
      Add a new credential
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "credential_templates/credentials_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Name
        </th>

        <th>
        </th>
      </tr>

      <% @credentials.each do |credential| %>
      <tr>

        <td>
          <%= credential.name %>
        </td>

        <td>
          <a href="/credentials/<%= credential.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @credentials, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
