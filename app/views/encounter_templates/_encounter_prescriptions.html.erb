<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Prescriptions

    <a data-toggle="collapse" href="#encounter_prescriptions_new_form">
      Add prescription
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @encounter.prescriptions.each do |prescription| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        
        <%= prescription.medication.name_with_dosage %>
        <br/>
        Instructions: <%= prescription.instructions %>

        <a href="/prescriptions/<%= prescription.id %>">
          see details
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="encounter_prescriptions_new_form">
        <%= render partial: "encounter_templates/encounter_prescriptions_new_form" %>
      </div>
    </div>

  </ul>
</div>
