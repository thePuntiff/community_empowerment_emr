<h1>
  Edit medication #<%= @medication.id %>
</h1>

<hr>

<form action="/update_medication/<%= @medication.id %>" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @medication.name %>">
  </div>

  <div class="form-group">
    <label for="dosage">
      Dosage
    </label>

    <input type="text" id="dosage" name="dosage" class="form-control" value="<%= @medication.dosage %>">
  </div>

  <div class="form-group">
    <label for="med_type_id">
      Med type
    </label>

    <%= select_tag(:med_type_id, options_from_collection_for_select(MedType.all, :id, :name, @medication.med_type_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update medication
  </button>
</form>

<hr>

<a href="/medications">
  Go back
</a>
