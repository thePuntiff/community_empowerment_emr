<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Credentials

    <a data-toggle="collapse" href="#provider_credentials_new_form">
      Add credential
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @provider.credentials.each do |credential| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/credentials/<%= credential.id %>">
          <%= credential.name %>
        </a>

      </li>
    <% end %>
    
    <div class="card-footer">
      <div class="collapse" id="provider_credentials_new_form">
        <%= render partial: "provider_templates/provider_credentials_new_form" %>
      </div>
    </div>  
    
  </ul>
</div>
