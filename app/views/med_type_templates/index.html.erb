<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All medication types
    </h1>

    <a href="/med_types/new" class="btn btn-block btn-outline-secondary">
      Add a new medication type
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "med_type_templates/med_types_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        
        <th>
          Medication Type
        </th>

        <th>
        </th>
      </tr>

      <% @med_types.each do |med_type| %>
      <tr>

        <td>
          <%= med_type.name %>
        </td>

        <td>
          <a href="/med_types/<%= med_type.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @med_types, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
