<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Med type #<%= @med_type.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/med_types" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/med_types/<%= @med_type.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit med type
        </a>
      </div>

      <div class="col">
        <a href="/delete_med_type/<%= @med_type.id %>" class="btn btn-block btn-outline-secondary">
          Delete med type
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @med_type.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@med_type.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@med_type.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "med_type_templates/med_type_medications" %>
  </div>
</div>
