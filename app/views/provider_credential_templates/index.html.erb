<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All provider credentials
    </h1>

    <a href="/provider_credentials/new" class="btn btn-block btn-outline-secondary">
      Add a new provider credential
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "provider_credential_templates/provider_credentials_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          Provider
        </th>

        <th>
          Credential
        </th>

        <th>
        </th>
      </tr>

      <% @provider_credentials.each do |provider_credential| %>
      <tr>
        <td>
          <% if provider_credential.provider.present? %>
            <a href="/providers/<%= provider_credential.provider.id %>">
              <%= provider_credential.provider.fullname %>
            </a>
          <% end %>
        </td>

        <td>
          <% if provider_credential.credential.present? %>
            <a href="/credentials/<%= provider_credential.credential.id %>">
              <%= provider_credential.credential.name %>
            </a>
          <% end %>
        </td>

        <td>
          <a href="/provider_credentials/<%= provider_credential.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @provider_credentials, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
