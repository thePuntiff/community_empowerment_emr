<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    All prescriptions for <%= @prescription.patient.fullname %>

    <a data-toggle="collapse" href="#prescription_prescriptions_new_form">
      Add prescription
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @prescription.patient.prescriptions.each do |prescription| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        
        <%= prescription.medication.name_with_dosage %>
        <br/>
        Instructions: <%= prescription.instructions %>

        <a href="/prescriptions/<%= prescription.id %>">
          see details
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="prescription_prescriptions_new_form">
        <%= render partial: "prescription_templates/prescription_prescriptions_new_form" %>
      </div>
    </div>

  </ul>
</div>
