<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Encounters

    <a data-toggle="collapse" href="#patient_encounters_new_form">
      Add encounter
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @patient.encounters.each do |encounter| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        
          <%= encounter.created_at.to_date %> visit @ <%= encounter.location.name %>
        
        <a href="/encounters/<%= encounter.id %>">
          see details
        </a>
        
      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="patient_encounters_new_form">
        <%= render partial: "patient_templates/patient_encounters_new_form" %>
      </div>
    </div>

  </ul>
</div>
