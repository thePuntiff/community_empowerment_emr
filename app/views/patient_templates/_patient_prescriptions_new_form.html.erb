<form action="/create_prescription_from_patient" method="post">

  <input type="hidden" name="patient_id" value="<%= @patient.id %>">

  <input type="hidden" name="provider_id" value="<%= current_provider.id %>">

  <div class="form-group">
    <label for="encounter_id">
      Encounter
    </label>

    <%= select_tag(:encounter_id, options_from_collection_for_select(@patient.encounters, :id, :name, @prescription.encounter_id), :include_blank => 'Select an encounter', :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="medication_id">
      Medication
    </label>

    <%= select_tag(:medication_id, options_from_collection_for_select(Medication.all, :id, :name_with_dosage, @prescription.medication_id), :include_blank => 'Select a medication', :class => "form-control") %>
  </div>
  
  <div class="form-group">
    <label for="instructions">
      Instructions
    </label>

    <textarea class="form-control" id="instructions" name="instructions" rows="4"></textarea>
  </div>
  

  <button class="btn btn-block btn-outline-secondary">
    Create prescription
  </button>
</form>
